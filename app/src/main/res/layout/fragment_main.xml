<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment">

    <com.andexert.expandablelayout.library.ExpandableLayout
        android:id="@+id/HTO"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        expandable:el_headerLayout="@layout/view_header_hto"
        expandable:el_contentLayout="@layout/view_content_hto" />

    <com.andexert.expandablelayout.library.ExpandableLayout
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        expandable:el_headerLayout="@layout/view_header_info"
        expandable:el_contentLayout="@layout/view_content_info" />


</LinearLayout>
    </ScrollView>
